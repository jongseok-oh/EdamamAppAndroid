<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fef6e4">

    <ToggleButton
        android:id="@+id/BGMtoggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#D8BF63"
        android:onClick="onToggle"
        android:textColor="#FFFFFF"
        android:textOff="BGM OFF"
        android:textOn="BGM ON" />

    <ImageView
        android:id="@+id/cakeimg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/BGMtoggle"
        app:srcCompat="@drawable/cake_yello" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="let's eat healthy!"
        android:textSize="15pt" />

    <Button
        android:id="@+id/NutritionFacts"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:onClick="OnClickNutritionFacts"
        android:text="Nutrition Facts"
        app:backgroundTint="#D8BF63" />

    <Button
        android:id="@+id/SearchRecipe"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nutInfo"
        android:onClick="OnClickSearchRecipe"
        android:text="Search Recipe"
        app:backgroundTint="#D8BF63" />

    <Button
        android:id="@+id/TodayDiet"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchRecipeInfo"
        android:onClick="OnClickTodayDiet"
        android:text="Diet Recipe"
        app:backgroundTint="#D8BF63" />

    <TextView
        android:id="@+id/nutInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/NutritionFacts" />

    <TextView
        android:id="@+id/SearchRecipeInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SearchRecipe"/>

    <TextView
        android:id="@+id/TodayDietInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/TodayDiet"
        />

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cakeimg"
        android:text="길게 눌러 설명 보기"
        android:textColor="#DF7A0F" />
</RelativeLayout>